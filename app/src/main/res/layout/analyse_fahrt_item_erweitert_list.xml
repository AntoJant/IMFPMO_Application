<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ausgeklapptesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distanzLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distanz:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dauerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dauer: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cO2Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2 AusstoÃŸ:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/alternativeFahrtLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternative Fahrt:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/alternateZeitdauer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternative Zeitdauer:"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distanzTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dauerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cO2textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/altImageView"
                android:layout_width="23dp"
                android:layout_height="24dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/altZeitdauertextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="111dp"
            android:layout_height="88dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zeitTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zeit"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/startPunktTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>