<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/okoImageView"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/okoImageView"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/okoBewertungLabel"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/okoBewertungLabel" />

    <TextView
        android:id="@+id/monatLabel"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Monat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/okoBewertungLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Ã–ko Bewertung:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/okoBewertungLabel"
        android:layout_alignBottom="@+id/okoBewertungLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-5dp"
        android:text="Wege anzeigen" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@+id/monatLabel"
        android:layout_marginTop="0dp" />

</RelativeLayout>