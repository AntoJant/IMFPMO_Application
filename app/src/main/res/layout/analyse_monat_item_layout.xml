<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bestAlternativeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/okoBewertungLabel"
        android:layout_alignStart="@+id/okoBewertungLabel"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Beste Alternative:  "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/monatLabel"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Monat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/okoBewertungLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="Ã–ko Bewertung:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/okoBewertungLabel"
        android:layout_alignBottom="@+id/bestAlternativeTextView"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/okoBewertungLabel"
        android:text="Tage anzeigen" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@+id/monatLabel"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/okoImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/okoBewertungLabel"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/okoBewertungLabel"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/bestAlternativeImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/bestAlternativeTextView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/bestAlternativeTextView"
        tools:srcCompat="@tools:sample/avatars" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/bestAlternativeImageView"
        android:layout_marginTop="0dp" />

</RelativeLayout>